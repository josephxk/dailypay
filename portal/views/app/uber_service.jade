extends dashboard

block dashboard_content
    section.content
        include ../partials/flash
        div.row
            .col-sm-12
                h3 Connect your Uber Account
                p DailyPay connects with your Uber Account to determine how much you drove on a given day. Based on that amount, we then deposit cash directly into your bank account.

                form.form-horizontal(id='uber-service-form', method='POST')
                    input(type='hidden', name='_csrf', value=_csrf)
                    .form-group
                        //label(class='col-sm-2 control-label', for='email') Email
                        .col-sm-8
                            input.form-control(type='text', name='email', id='email', placeholder='Uber Partner Email', autofocus=true, required)
                    .form-group
                        //label(class='col-sm-2 control-label', for='password') Password
                        .col-sm-8
                            input.form-control(type='password', name='password', id='password', placeholder='Uber Partner Password', required)
                    .form-group
                        .col-sm-offset-0.col-sm-8
                            button.btn.btn-primary(type='submit')
                                | Submit Info
